<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar">
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
    </style>

    <style name="custom_switch" >
        <item name="android:textStyle">bold</item>
        <item name="android:thumb">@drawable/switch_thumb</item>
        <item name="android:track">@drawable/switch_bg</item>
    </style>
    <style name="btn_back" parent="android:Widget.Holo.Light.TextView">
        <item name="android:background">@color/white</item>
        <item name="android:drawableLeft">@drawable/arro_back</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:textColor">@color/main_color_cyan</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
     <style name="btn_next" parent="android:Widget.Holo.Light.TextView">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/main_color_cyan</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textSize">15sp</item>
    </style>
     <style name="slider" parent="android:Widget.Holo.Light.SeekBar">
          <item name="android:progress">60</item>
          <item name="android:progressDrawable">@drawable/slider_progress_layer</item>
          <item name="android:thumb">@drawable/slider_thumb</item>
     </style>
     <style name="edittext_search" parent="android:Widget.Holo.Light.EditText">
          <item name="android:background">@drawable/edittext_search</item>
          <item name="android:drawableLeft">@drawable/ic_search</item>
          <item name="android:drawablePadding">5dp</item>
          <item name="android:ems">10</item>
          <item name="android:inputType">textPersonName</item>
          <item name="android:textColorHint">@color/main_color_cyan_dark</item>
     </style>
     <style name="lbl_pattern1" parent="android:Widget.Holo.Light.TextView">
          <item name="android:textColor">@color/white</item>
          <item name="android:textSize">20sp</item>
          <item name="android:textStyle">bold</item>
     </style>
     <style name="lbl_pattern2" parent="android:Widget.Holo.Light.TextView">
          <item name="android:textColor">@color/white</item>
          <item name="android:textSize">18sp</item>
          <item name="android:drawablePadding">3dp</item>
     </style>
</resources>
